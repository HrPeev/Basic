using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Fort
{
    class Program
    {
        static void Main(string[] args)
        {
            int number = int.Parse(Console.ReadLine());
            for (int i = 0; i < number; i++)
            {
                Console.Write("$");
                for (int j = 0; j < i; j++)
                {
                    Console.Write(" $",j);
                }
                Console.WriteLine();
            }

            
                
            
        }
    }
}
